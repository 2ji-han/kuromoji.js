{
    "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["drizzle/*", "node_modules/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "double",
            "indentWidth": 4,
            "indentStyle": "space",
            "lineEnding": "lf",
            "semicolons": "always",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "trailingCommas": "es5",
            "lineWidth": 120
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120
        }
    }
}
